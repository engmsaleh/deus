<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<automator xmlns="http://dsg.ce.unipr.it/software/deus/schema/automator">
    <event handler="it.unipr.ce.dsg.deus.example.noc.CoreToSwitchConnection" id="coreToSwitchConn"/>
    <event handler="" id="MemoryBlockWrite"/>
    <event handler="it.unipr.ce.dsg.deus.example.noc.SwitchToSwitchConnection" id="switchToSwitchConnection"/>
    <event oneShot="true" handler="it.unipr.ce.dsg.deus.example.noc.MemoryBlockCreation" id="memoryBlockCreation">
        <params>
            <param value="res/Underworld-ToHeal.mp3" name="fileName"/>
            <param value="loop" name="modality"/>
        </params>
        <events>
            <reference id="memoryBlockToSwitchConnection"/>
        </events>
    </event>
    <event handler="it.unipr.ce.dsg.deus.example.noc.NoCTime" id="time"/>
    <event handler="" id="CoreMessageGeneration"/>
    <event handler="it.unipr.ce.dsg.deus.example.noc.CoreCreation" id="coreCreation">
        <events>
            <reference id="coreToSwitchConn"/>
        </events>
    </event>
    <event handler="" id="SwitchMessageGeneration"/>
    <event handler="" id="MemoryBlockRead"/>
    <event schedulerListener="it.unipr.ce.dsg.deus.example.life.LifeCreationSchedulerListener" handler="it.unipr.ce.dsg.deus.example.life.LifeCreationEvent" id="switchCreation">
        <events>
            <reference id="switchToSwitchConnection"/>
        </events>
    </event>
    <event handler="" id="memoryBlockToSwitchConnection"/>
    <node handler="" id="MemoryBlock"/>
    <node handler="" id="Core"/>
    <node handler="it.unipr.ce.dsg.deus.example.noc.Switch" id="switch">
        <logger pathPrefix="" level="INFO"/>
        <params>
            <param value="50" name="meanArrivalBirthRate"/>
        </params>
    </node>
    <process handler="it.unipr.ce.dsg.deus.impl.process.PeriodicProcess" id="periodic1">
        <params>
            <param value="100" name="period"/>
        </params>
        <events>
            <reference id="time"/>
        </events>
    </process>
    <process handler="" id="poisson1">
        <nodes>
            <reference id="Core"/>
        </nodes>
        <events>
            <reference id="CoreMessageGeneration"/>
        </events>
    </process>
    <process handler="it.unipr.ce.dsg.deus.impl.process.RectangularPulsePeriodicProcess" id="periodic3">
        <params>
            <param value="1" name="period"/>
            <param value="91" name="startVtThreshold"/>
            <param value="2500" name="stopVtThreshold"/>
        </params>
        <nodes>
            <reference id="MemoryBlock"/>
            <reference id="Core"/>
        </nodes>
        <events>
            <reference id="coreToSwitchConn"/>
            <reference id="coreCreation"/>
            <reference id="memoryBlockCreation"/>
            <reference id="memoryBlockToSwitchConnection"/>
        </events>
    </process>
    <process handler="" id="poisson2">
        <nodes>
            <reference id="switch"/>
        </nodes>
        <events>
            <reference id="SwitchMessageGeneration"/>
        </events>
    </process>
    <process handler="it.unipr.ce.dsg.deus.impl.process.RectangularPulsePeriodicProcess" id="periodic2">
        <params>
            <param value="10" name="period"/>
            <param value="0" name="startVtThreshold"/>
            <param value="90" name="stopVtThreshold"/>
        </params>
        <nodes>
            <reference id="switch"/>
        </nodes>
        <events>
            <reference id="switchToSwitchConnection"/>
            <reference id="switchCreation"/>
        </events>
    </process>
    <engine keyspacesize="100" seed="12345678" maxvt="2500.0">
        <logger level="ALL"/>
        <processes>
            <reference id="periodic1"/>
            <reference id="periodic2"/>
            <reference id="periodic3"/>
        </processes>
    </engine>
</automator>
