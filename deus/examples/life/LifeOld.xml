<?xml version="1.0" encoding="UTF-8"?>
<aut:automator
	xmlns:aut="http://dsg.ce.unipr.it/software/deus/schema/automator"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://dsg.ce.unipr.it/software/deus/schema/automator ../../schema/automator.xsd ">


	<!-- *** EVENTS *** -->

	<aut:event id="birth" handler="it.unipr.ce.dsg.deus.example.life.LifeCreationEvent" 
		schedulerListener="it.unipr.ce.dsg.deus.example.life.LifeCreationSchedulerListener">
	 	<aut:events><!-- events to be scheduled on created node -->
		    <aut:reference id="update" />
		</aut:events>
	</aut:event>

	<aut:event id="update" handler="it.unipr.ce.dsg.deus.example.life.LifeUpdateWorldEvent" >
		<aut:params>
			<aut:param name="hasSameAssociatedNode" value="true" />
		</aut:params>
	</aut:event>

	<aut:event id="showWorld" handler="it.unipr.ce.dsg.deus.example.life.LifeShowWorldEvent" />
	
	<aut:event id="time" handler="it.unipr.ce.dsg.deus.example.life.LogLifeTime" />
	
	
	<!-- *** NODE SPECIES *** -->

	<aut:node id="lifeRegion" handler="it.unipr.ce.dsg.deus.example.life.LifeRegion">
		<aut:logger level="FINE" />
		<aut:params>
			<aut:param name="regionSide" value="40" />
			<aut:param name="initialZones" value="1" />
		</aut:params>
	</aut:node>


	<!-- *** PROCESSES *** -->

	<aut:process id="periodicBirth" handler="it.unipr.ce.dsg.deus.impl.process.TwoSpeedsPeriodicProcess">
		<aut:params>
			<aut:param name="firstPeriodArrival" value="0.25" />
			<aut:param name="secondPeriodArrival" value="10000000000000000" />
			<aut:param name="vtThreshold" value="1" />	
		</aut:params>
		<aut:nodes>
			<aut:reference id="lifeRegion" />
		</aut:nodes>
		<aut:events>
			<aut:reference id="birth" />		
		</aut:events>
	</aut:process>
	
	<aut:process id="periodicUpdate" handler="it.unipr.ce.dsg.deus.impl.process.PeriodicProcess">
		<aut:params>
			<aut:param name="period" value="2" /> 
		</aut:params>
		<aut:events>
		    <aut:reference id="update" />
		</aut:events>
	</aut:process>
	
		<aut:process id="periodicShow" handler="it.unipr.ce.dsg.deus.impl.process.PeriodicProcess">
		<aut:params>
			<aut:param name="period" value="2" /> 
		</aut:params>
		<aut:events>
		    <aut:reference id="showWorld" />
		</aut:events>
	</aut:process>
	
	<aut:process id="time" handler="it.unipr.ce.dsg.deus.impl.process.PeriodicProcess">
		<aut:params>
			<aut:param name="period" value="25" /> 
		</aut:params>
		<aut:events>
		    <aut:reference id="time" />
		</aut:events>
	</aut:process>
	
		
	<!-- *** SIMULATION *** -->

	<aut:engine maxvt="500" seed="123456789" keyspacesize="100"> 
		<aut:logger level="ALL" />
		<aut:processes>
			<aut:reference id="periodicBirth" />
			<aut:reference id="periodicShow" />
			<aut:reference id="time" />
		</aut:processes>
	</aut:engine>

</aut:automator>